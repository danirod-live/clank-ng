{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "project": ["./tsconfig.json"] },
  "plugins": ["@typescript-eslint", "prettier"],
  "ignorePatterns": ["**/dist/*"],
  "rules": {
    "prettier/prettier": "error"
  }
}
